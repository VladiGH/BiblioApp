<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DetailTitle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">@font/OpenSans-Bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="DetailField" parent="TextAppearance.AppCompat">
        <!-- <item name="android:textColor">@android:color/black</item> -->
        <item name="android:fontFamily">@font/OpenSans-Regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="DetailSummary" parent="TextAppearance.AppCompat">
        <!-- <item name="android:textColor">@android:color/black</item> -->
        <item name="android:fontFamily">@font/OpenSans-Regular</item>
        <item name="android:textSize">24sp</item>
    </style>

</resources>
